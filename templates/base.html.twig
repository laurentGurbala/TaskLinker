<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}{% endblock %} - TaskLinker</title>
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<div id="main-container"> 
			<nav>
				<a href="{{ path("app_main") }}" id="logo">
					<img src="{{ asset('img/logo.png') }}" alt="Logo TaskLinker" />
				</a>
				<ul id="main-menu">
					<li class="active">
						<a href="#">
							<i class="fa-solid fa-list-check"></i> Projets
						</a>
					</li>
					<li>
						<a href="#">
							<i class="fa-regular fa-user"></i> Ã‰quipe
						</a>
					</li>
				</ul>
			</nav>

			<main>
				<header>
					<div id="current-user">
						{% block user %}{% endblock %}
					</div>
					<div id="title-page">
						{% block header %}{% endblock %}
					</div>
				</header>
				{% block body %}{% endblock %}
			</main>
		</div>
	</body>
</html>
